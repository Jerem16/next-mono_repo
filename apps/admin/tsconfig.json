{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "noEmit": true,
        "incremental": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@admin": ["./"],
            "@admin/*": ["./*"],
            "@amplify": ["../../amplify"],
            "@amplify/*": ["../../amplify/*"],
            "@packages/ui": ["../../packages/ui/src"],
            "@packages/ui/*": ["../../packages/ui/src/*"],
            "@packages/domain": ["../../packages/domain/src"],
            "@packages/domain/*": ["../../packages/domain/src/*"],
            "@packages/services": ["../../packages/services/src"],
            "@packages/services/*": ["../../packages/services/src/*"],
            "@packages/types": ["../../packages/types/src"],
            "@packages/types/*": ["../../packages/types/src/*"],
            "@apps/*": ["../../apps/*"],
            "@src/*": ["src/*"],
            "@app/*": ["app/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@context/*": ["src/utils/context/*"],
            "@utils/*": ["src/utils/*"],
            "@public/*": ["public/*"]
        },
        "plugins": [{ "name": "next" }]
    },
    "include": [
        "next-env.d.ts",
        "global.d.ts",
        "app/**/*",
        "src/**/*",
        "public/**/*.json",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"],
    "references": [
        { "path": "../../packages/types" },
        { "path": "../../packages/domain" },
        { "path": "../../packages/services" },
        { "path": "../../packages/ui" }
    ]
}
