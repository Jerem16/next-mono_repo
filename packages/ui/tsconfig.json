{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "composite": true,
        "declaration": true,
        "jsx": "react-jsx",
        "emitDeclarationOnly": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@packages/ui/*": ["src/*"],
            "@packages/services": ["../services/src"],
            "@packages/services/*": ["../services/src/*"]
        },
        "skipLibCheck": true
    },
    "include": ["src"],
    "peerDependencies": {
        "aws-amplify": ">=6",
        "@aws-amplify/ui-react": ">=6"
    },
    "references": [{ "path": "../types" }, { "path": "../services" }]
}
